{
  "name": "android-usb-hid-keyboard",
  "description": "USB HID Keyboard Library for Rooted Android Devices",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.cjs",
    "./dist/*": "./dist/*"
  },
  "scripts": {
    "start": "cross-env TS_NODE_BASEURL=./dist node -r tsconfig-paths/register dist/examples.js",
    "dev": "cross-env TS_NODE_BASEURL=./dist tsx watch src/main.ts",
    "build": "tsc",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build",
    "bump-version": "npm version patch"
  },
  "keywords": [
    "android",
    "usb",
    "hid",
    "keyboard",
    "configfs",
    "gadget",
    "rooted"
  ],
  "devDependencies": {
    "@types/node": "^20.17.30",
    "cross-env": "^10.1.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  }
}