{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "paths": {
      "@/utils": [
        "./utils/index"
      ],
      "@/utils/*": [
        "./utils/*"
      ]
    },
  },
  "include": [
    "src",
    "**/*.ts"
  ],
  "exclude": [
    "dist",
    "scripts",
    "node_modules",
    "tests"
  ]
}